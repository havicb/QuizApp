<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="selectedAnswer"
            type="String" />

        <variable
            name="viewModel"
            type="com.example.quizapp.presentation.main.quiz.QuizViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizFragment">

        <ProgressBar
            android:id="@+id/quiz_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/extra_large_125"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quiz_progress"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            android:visibility="invisible"
            tools:text="Question 1" />

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question_number"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/normal_150"
            android:layout_marginTop="@dimen/large_175"
            android:layout_marginEnd="@dimen/normal_150"
            android:background="@drawable/answer_background"
            android:gravity="center"
            android:padding="@dimen/small_150"
            android:text="@={viewModel.question}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            android:visibility="invisible" />


        <ProgressBar
            android:id="@+id/question_loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="visible" />


        <LinearLayout
            android:id="@+id/first_two_answers_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question"
            android:layout_marginTop="@dimen/large_175"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/answer_A"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_175"
                android:layout_marginEnd="@dimen/small_175"
                android:layout_weight="1"
                android:background="@drawable/answer_background"
                android:gravity="center"
                android:onClick="@{() -> viewModel.selectedAnswer(answerA)}"
                android:padding="@dimen/small_125"
                android:text="@={viewModel.answerA}" />

            <TextView
                android:id="@+id/answer_B"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_175"
                android:layout_weight="1"
                android:background="@drawable/answer_background"
                android:gravity="center"
                android:onClick="@{() -> viewModel.selectedAnswer(answerB)}"
                android:padding="@dimen/small_125"
                android:text="@={viewModel.answerB}" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/last_two_answers_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_two_answers_ll"
            android:layout_marginTop="@dimen/large_175"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/answer_C"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_175"
                android:layout_marginEnd="@dimen/small_175"
                android:layout_weight="1"
                android:background="@drawable/answer_background"
                android:gravity="center"
                android:onClick="@{() -> viewModel.selectedAnswer(answerC)}"
                android:padding="@dimen/small_125"
                android:text="@={viewModel.answerC}" />

            <TextView
                android:id="@+id/answer_D"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_175"
                android:layout_weight="1"
                android:background="@drawable/answer_background"
                android:gravity="center"
                android:onClick="@{() -> viewModel.selectedAnswer(answerD)}"
                android:padding="@dimen/small_125"
                android:text="@={viewModel.answerD}" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_proceed_to_next_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_two_answers_ll"
            android:layout_marginStart="@dimen/large_175"
            android:layout_marginTop="@dimen/large_175"
            android:layout_marginEnd="@dimen/large_175"
            android:backgroundTint="@color/white"
            android:onClick="@{() -> viewModel.checkQuestion(selectedAnswer)}"
            android:text="@string/next_question"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:visibility="invisible" />

    </RelativeLayout>
</layout>